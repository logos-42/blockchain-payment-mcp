{
  "name": "blockchain-payment-mcp",
  "version": "0.1.13",
  "description": "区块链货币支付MCP服务器 - TypeScript版本，支持智能体钱包和用户钱包管理",
  "main": "dist/server.js",
  "type": "module",
  "files": [
    "dist/**/*",
    "README_TS.md",
    "env.example"
  ],
  "bin": {
    "blockchain-payment-mcp": "dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logos-42/blockchain-payment-mcp.git"
  },
  "homepage": "https://github.com/logos-42/blockchain-payment-mcp#readme",
  "bugs": {
    "url": "https://github.com/logos-42/blockchain-payment-mcp/issues"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "test": "tsx src/test.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "blockchain",
    "payment",
    "mcp",
    "ethereum",
    "web3",
    "typescript"
  ],
  "author": "AI Assistant",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "blockchain-payment-mcp": "^0.1.11",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
